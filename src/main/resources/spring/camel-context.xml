<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"       
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    
   <!--     Conexion Database -->
    <bean
        class="org.springframework.jdbc.datasource.DriverManagerDataSource" id="dataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="url" value="jdbc:sqlserver://10.10.251.19;databaseName=SCA_QA"/>
        <property name="username" value="testsiga"/>
        <property name="password" value="Amsa.2020#"/>
    </bean>
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
      <!-- ConfiguraciÃ³n base REST DSL -->
   
        <restConfiguration bindingMode="off" component="servlet" contextPath="/rest"/>        
        <rest apiDocs="true" consumes="application/json" id="rest-1"
           produces="application/json" path="/service">
            <get uri="/customers">
                <to uri="direct:routeBussines"/>
            </get>
        </rest>        
        
        <route streamCache="true">
            <from id="_fromIR1" uri="direct:routeBussines"/>
            <log message="DATA IN => \n${body}"/>
            <setProperty propertyName="rut">
            	<constant>10.000.000-1</constant>
            </setProperty>
            <setProperty propertyName="fechaInicio">
            	<constant>01/01/2021</constant>
            </setProperty>
            <setProperty propertyName="fechaTermino">
            	<constant>01/05/2021</constant>
            </setProperty>
            <setProperty propertyName="Codigo_Certificado">
            	<constant>100000001</constant>
            </setProperty>
            
            <to id="_sqlSPConsultaRol" uri="sql-stored:dbo.sca_ins_contratorequisito_examen_medico(VARCHAR(15) ${exchangeProperty.rut}, DATETIME ${exchangeProperty.fechaInicio}, DATETIME ${exchangeProperty.fechaTermino}, int ${exchangeProperty.Codigo_Certificado}  )?dataSource=#dataSource"/>
            <log message="After SP"/>
            <log message="Message After SP => \n${body}"/>
        </route>

        <route id="simple-route">
            <from id="route-timer" uri="timer://foo?period=15000"/>
            <setBody id="route-setBody"><simple>Hello World from camel-context.xml</simple></setBody>
            <log id="route-log" message=">>> ${body}"/>
        </route>

    </camelContext>
</beans>
